<Window x:Class="Projeto_PII_noCanvas.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Projeto_PII_noCanvas"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="800" Background="Black"
        ResizeMode="NoResize"
        >
    <Grid x:Name="grid">
        <Canvas x:Name="canvas">
            <Label Margin="0,0,0,0" FontSize="26" Foreground="White" Content="Nivel"></Label>
            <Label Margin="80,0,0,0" FontSize="26" Foreground="White" Content="Pontuação"></Label>
            <Label Margin="220,0,0,0" FontSize="26" Foreground="White" Content="Vidas" ></Label>
            <Label Margin="10,50,0,0" FontSize="26" Foreground="White" Content="0" x:Name="lbl_nivel" ></Label>
            <Label Margin="90,50,0,0" FontSize="26" Foreground="White" Content="0" x:Name="lbl_pontuacao"></Label>
            <Label Margin="230,50,0,0" FontSize="26" Foreground="White" Content="0" x:Name="lbl_vidas" ></Label>
            <Button Margin="330,330,330,330" Width="110" Height="75" Content="START" Background="Transparent" Foreground="White" BorderBrush="White" x:Name="btn_Start" Click="btnStart_click"></Button>
        </Canvas>
    </Grid>
</Window>
